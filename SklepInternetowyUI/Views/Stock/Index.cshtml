@model IEnumerable<StockDisplayModel>
@{
    Layout = "_AdminLayout";
}
<h2>Magazyn</h2>

<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25" placeholder="Szukaj" />
    <button type="submit" class="btn btn-primary">Znajdź</button>
    <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Wszystkie</a>
</form>

<table class="table table-bordered">
  <tr>
    <th>Produkt</th>
    <th>Ilość</th>
    <th>Akcje</th>
  </tr>
  @foreach(var item in Model)
  {
    <tr>
      <td>@item.ProductName</td>
      <td>@item.Quantity</td>
      <td>
         <a asp-action="ManangeStock" asp-controller="Stock" asp-route-ProductId="@item.ProductId" class="btn btn-info"> Zmień ilość</a>
      </td>
    </tr>
  }
</table>

